playerHp = player.getHp();

weaponLoaded = player.weaponIsLoaded();

if: weaponLoaded and playerHp > 1 {
    #playSound("smg");
    player.fireProjectile("_PROJECTILE_BLOOD_GUN", 1);

    damage = 1;
    newHp = playerHp - damage;
    if: newHp < 1 {
        newHp = 1;
    }
    player.setHp(newHp);
}